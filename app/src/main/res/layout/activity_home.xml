<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="kr.co.enterprise1.mfpdemo.home.HomeActivity"
    >

  <TextView
      android:id="@+id/hello_textview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      tools:layout_marginTop="?attr/actionBarSize"
      tools:text="Hello, smart"
      />
  <TextView
      android:id="@+id/result_textview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Title"
      tools:text="balance"
      />
  <Button
      android:id="@+id/setting_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="?attr/actionBarSize"
      android:text="@string/setting"
      style="@style/Widget.AppCompat.Button.Borderless.Colored"
      />
  <Button
      android:id="@+id/logout_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="logout"
      style="@style/Widget.AppCompat.Button.Borderless.Colored"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <Button
        android:id="@+id/crash_1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="크래시1"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        />
    <Button
        android:id="@+id/crash_2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="크래시2"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        />
    <Button
        android:id="@+id/crash_3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="크래시3"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        />
    <Button
        android:id="@+id/crash_4_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="크래시4"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        />

  </LinearLayout>
</LinearLayout>